    async Task Buscar()
    {
        var Encontrado = await NominaService.Find(this.NominaId);
        if(Encontrado!=null)
        {
            this.Nom=Encontrado;
        }
    }
    async Task Eliminar()
    {
        await NominaService.Delete(this.NominaId);
        
